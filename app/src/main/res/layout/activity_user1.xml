<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".user1">

<!--    <ScrollView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <RelativeLayout
                android:background="#6DBADBF6"
                android:layout_width="match_parent"
                android:layout_height="90dp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/back_box"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:cardCornerRadius="25dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginTop="38dp"
                    android:layout_marginLeft="20dp">
                    <ImageView
                        android:id="@+id/backbutton"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="8dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/arrow_back"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_toRightOf="@id/back_box"
                    android:id="@+id/username"
                    android:layout_marginTop="30dp"
                    android:text="user_name"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:paddingLeft="65dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_width="220dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="wrap_content"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="60dp"
                        android:layout_height="20dp"
                        app:cardCornerRadius="10dp"
                        android:id="@+id/active"
                        app:cardBackgroundColor="#6DBADBF6"
                        android:layout_below="@id/username"
                        android:layout_toRightOf="@id/back_box"
                        android:layout_marginLeft="120dp">
                        <TextView
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Online"
                            android:textStyle="bold"
                            android:textColor="#66BB6A"
                            android:textSize="14dp" />


                    </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_toRightOf="@id/username"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="25dp"
                    android:layout_width="50dp"
                    app:cardCornerRadius="30dp"
                    android:layout_height="50dp">

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recycler_msg"/>
            <RelativeLayout
                android:id="@+id/bottom_bar"
                android:layout_width="match_parent"
                android:layout_marginBottom="15dp"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/card_box"
                    app:cardCornerRadius="40dp"
                    app:cardBackgroundColor="#e1e6e4"
                    android:layout_width="300dp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/attachment"
                        android:layout_marginLeft="8dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/attach_file"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>
                    <EditText
                        android:id="@+id/message"
                        android:layout_marginLeft="35dp"
                        android:hint="Type a message"
                        android:textColor="#3E5151"
                        android:textColorHint="#9F000000"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"/>
                    <ImageButton
                        android:id="@+id/send"
                        android:layout_gravity="bottom"
                        android:visibility="visible"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/send"
                        android:layout_marginLeft="255dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="5dp"
                    android:layout_toRightOf="@id/card_box"
                    android:layout_marginLeft="15dp"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="#e1e6e4"
                    android:layout_width="50dp"
                    android:layout_height="50dp">
                    <ImageView
                        android:id="@+id/mic"
                        android:layout_gravity="center"
                        android:src="@drawable/mic_none"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>
                </androidx.cardview.widget.CardView>

            </RelativeLayout>

        </RelativeLayout>


    </LinearLayout>
<!--    </ScrollView>-->
</LinearLayout>



